# Environment Configuration Template for Prototype v2
# Copy this file to .env in the same directory and update with your values
# IMPORTANT: Never commit .env files to version control

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Vite Configuration (Client-side environment variables must be prefixed with VITE_)
VITE_API_BASE_URL=http://localhost:3000
VITE_APP_NAME=Lichtara OS v2
VITE_APP_VERSION=2.0.0

# Server Configuration (if using server.js)
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=your_database_connection_string_here

# API Configuration
API_RATE_LIMIT=100
CORS_ORIGIN=http://localhost:5173

# Feature Flags (exposed to client)
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=false

# Authentication
JWT_SECRET=your_jwt_secret_here

# Logging
LOG_LEVEL=info

# Theme Configuration
VITE_DEFAULT_THEME=light

# WARNING: 
# - Only VITE_ prefixed variables are available to the client
# - Never expose sensitive keys with VITE_ prefix
# - Replace 'your_*_here' with actual values
# - Never commit this file to version control!