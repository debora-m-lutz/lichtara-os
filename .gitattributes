# Auto detect text files and perform LF normalization
* text=auto

# Explicitly set text files to use LF line endings
*.md text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.sh text eol=lf

# Configuration files
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf
.nvmrc text eol=lf
LICENSE text eol=lf
README.md text eol=lf
CHANGELOG.md text eol=lf
CONTRIBUTING.md text eol=lf
CODE_OF_CONDUCT.md text eol=lf
SECURITY.md text eol=lf

# Language specific files
package.json text eol=lf
package-lock.json text eol=lf
tsconfig.json text eol=lf
components.json text eol=lf

# Binary files (no text processing)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.tgz binary
*.7z binary
*.rar binary

# Font files
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary
*.eot binary

# Audio/Video files
*.mp3 binary
*.mp4 binary
*.wav binary
*.avi binary
*.mov binary

# Archives and compiled files
*.dll binary
*.exe binary
*.so binary
*.dylib binary
*.jar binary

# Database files
*.db binary
*.sqlite binary
*.sqlite3 binary

# Lock files (treat as binary to avoid merge conflicts)
yarn.lock binary
pnpm-lock.yaml binary

# Git LFS tracking for large files
*.model filter=lfs diff=lfs merge=lfs -text
*.pkl filter=lfs diff=lfs merge=lfs -text
*.joblib filter=lfs diff=lfs merge=lfs -text

# Linguist language detection
*.md linguist-detectable=true
*.json linguist-detectable=false
LICENSE linguist-detectable=false
CHANGELOG.md linguist-documentation=true
CODE_OF_CONDUCT.md linguist-documentation=true
CONTRIBUTING.md linguist-documentation=true
SECURITY.md linguist-documentation=true

# Spiritual content preservation
**/spiritual/* text eol=lf
**/consciousness/* text eol=lf
**/aurora/* text eol=lf
manifesto_etico.md text eol=lf

# Prototype and development files
**/prototipos/**/*.js text eol=lf
**/prototipos/**/*.ts text eol=lf
**/prototipos/**/*.json text eol=lf